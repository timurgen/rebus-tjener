<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="student.hin.no"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
		<uses-library android:name="com.google.android.maps" />
        
        
        <activity
            android:name=".KlientStartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".GamesListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.GAMES_LIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".GamesAllActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.GAMES_ALL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".MapActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <receiver
            android:name=".ProximityBroadcastReceiver">
            <intent-filter >
        		<action android:name="student.hin.no.PBR" />        
            </intent-filter>
        </receiver>
        
        <receiver
            android:name=".TimeReceiver">
            <intent-filter >
        		<action android:name="student.hin.no.TR" />        
            </intent-filter>
        </receiver>
            
            
        
    </application>

</manifest>